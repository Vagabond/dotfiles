XTerm*background:   black
XTerm*foreground:   white
XTerm*eightBitInput:   false
XTerm*metaSendsEscape: true

XTerm*toolBar: false

XTerm*cursorBlink:      true
XTerm*cursorOnTime:     1400
XTerm*cursorOffTime:    600

XTerm*saveLines: 4096

XTerm*visualBell: true

XTerm*trimSelection:      true
XTerm*keepSelection:      true

XTerm*printerCommand:   dd of=/tmp/foo bs=1 && xterm -e vim -n /tmp/foo 
XTerm*printerAutoClose: true
XTerm*printerFormFeed:  true
XTerm*printAttributes:  0

*VT100.Translations: #override Shift <KeyPress> Print: print() \n

XTerm*locale: UTF-8
XTerm*utf8: 3

! copy to the Clipboard AND the X selection
! Taken from http://www.davidsimmons.com/soft/xtermhacks/
XTerm*VT100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)

! better URL highlighting
! Taken from the comments at
! http://www.debian-administration.org/article/Customizing_your_xterm
! and modified to include the # character
xterm*charClass: 33:48,35-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! Stolen from http://www.fsai.fh-trier.de/~weyera/files/config/Xdefaults,
! hope he doesnt mind. :)

!black
!XTerm*color0:    rgb:00/00/00
!XTerm*color8:    rgb:70/74/78

!red
!XTerm*color1:    rgb:d0/70/50
!XTerm*color9:    rgb:d0/90/70

!green
!XTerm*color2:    rgb:50/b0/70
!XTerm*color10:    rgb:70/d0/90

!yellow
!XTerm*color3:    rgb:a0/a0/70
!XTerm*color11:    rgb:c0/c0/90

!blue
XTerm*color4:    rgb:56/8e/ff
XTerm*color12:    rgb:58/8c/f6

!magenta
!XTerm*color5:    rgb:a0/70/a0
!XTerm*color13:    rgb:c0/90/c0

!cyan
!XTerm*color6:    rgb:70/a0/a0
!XTerm*color14:    rgb:90/c0/c0

!white
